---
export interface Props {
	title: string;
	body: Array<string>;
}

const { title, body } = Astro.props;
---

<li class="card">
		<h2 class="heading-sm">
			{title}
		</h2>
		<p>
			{body.map((item) => (
				<p>{item}</p>
			))}
		</p>
</li>
<style>
	.card {
		flex: 1;
		list-style: none;
	}
	@media (max-width:1280px) {
		.card {
			flex-basis: 100%;
		}
	}
</style>
